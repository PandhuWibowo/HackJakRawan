<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.hackjak.activity.SignUpActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp"
    android:orientation="vertical"
    android:background="@color/splashscreen">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/r"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp" />

    <TextView
        android:textColor="#bdbdbd"
        android:textSize="16sp"
        android:id="@+id/keterangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please to Sign Up to acces."
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp" />

    <EditText
        android:background="@drawable/username"
        android:id="@+id/username"
        android:layout_width="288dp"
        android:layout_height="45dp"
        android:ems="10"
        android:paddingLeft="60dp"
        android:inputType="textPersonName"
        android:hint="Username"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/keterangan" />

    <EditText
        android:background="@drawable/password"
        android:id="@+id/password"
        android:layout_width="288dp"
        android:layout_height="45dp"
        android:ems="10"
        android:paddingLeft="60dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <android.support.v7.widget.ButtonBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_signin"
            android:layout_marginTop="20dp"
            android:textColorHint="#fff"
            android:textStyle="bold"
            android:hint="@string/registration"
            android:background="@drawable/buttonstyle"
            android:layout_width="308dp"
            android:layout_height="55dp"
            android:layout_marginLeft="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_in"/>
    </android.support.v7.widget.ButtonBarLayout>

</LinearLayout>
